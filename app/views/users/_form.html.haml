= simple_form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prevented this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  = f.input :username
  = f.input :first_name
  = f.input :last_name
  = f.input :email
  = f.input :mobile
  = f.input :about_me
  .actions
    = f.submit 'Save'
