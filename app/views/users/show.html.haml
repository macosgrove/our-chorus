- content_for :title do
  Show Member
- content_for :body_id do
  user-show
- content_for :body_class do
  user-page

%p#notice= notice

.avatar
  = image_tag @user.gravatar_url(:default => "monsterid")
%p
  %b Email:
  = @user.email
%p
  %b First name:
  = @user.first_name
%p
  %b Last name:
  = @user.last_name
%p
  %b Mobile:
  = @user.mobile
%p
  %b About me:
  = @user.about_me
%p
  %b Roles:

- @user.roles.each do |role|
  %span.role
    = role.label

%nav.page-links
  = link_to 'Back', users_path
