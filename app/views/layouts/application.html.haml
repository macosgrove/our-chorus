- body_id = yield :body_id
- body_class = yield :body_class
- page_title = yield :title
!!!5
%html
  %head
    %title Our Chorus - #{page_title}
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "description", :content=>"Set your creativity free! Join our democratic, fully collaborative harmony chorus. Dynamic, innovative, exciting!"}
    %meta{:name => "author", :content=>"Mary-Anne Cosgrove"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    = favicon_link_tag "/assets/favicon.ico", :type => "image/png", :rel => "shortcut icon"
    = stylesheet_link_tag :application, :media => "all"
    = javascript_include_tag :application
    = csrf_meta_tags
  %body{id: "#{body_id}", class: "#{body_class}"}
    = render 'common/header'
    #container
      %section#main{:role => "main"}
        = yield
    = render 'common/footer'